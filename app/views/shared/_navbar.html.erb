<nav class="ng-navbar" data-controller="theme-switcher">
  <div style="display: flex; align-items: center; gap: 1.5rem;">
    <a href="<%= root_path %>" class="ng-navbar-brand ng-gradient-text">Neon Glow</a>
    <div style="display: flex; gap: 0.25rem;">
      <a href="<%= root_path %>" class="ng-nav-link <%= 'ng-nav-link-active' if current_page?(root_path) %>">Home</a>
      <a href="<%= tailwind_kitchen_sink_path %>" class="ng-nav-link <%= 'ng-nav-link-active' if current_page?(tailwind_kitchen_sink_path) %>">Tailwind</a>
      <a href="<%= bootstrap_kitchen_sink_path %>" class="ng-nav-link <%= 'ng-nav-link-active' if current_page?(bootstrap_kitchen_sink_path) %>">Bootstrap</a>
    </div>
  </div>
  <div style="display: flex; align-items: center; gap: 0.75rem; flex-wrap: wrap;">
    <label class="ng-text-muted" style="font-size: 0.75rem;">Palette</label>
    <select class="ng-select" data-theme-switcher-target="palette" data-action="change->theme-switcher#changePalette">
      <optgroup label="Classic">
        <option value="neon-rainbow">Rainbow</option>
        <option value="neon-unicorn">Unicorn</option>
        <option value="neon-cinematic">Cinematic</option>
        <option value="neon-pink">Pink</option>
      </optgroup>
      <optgroup label="Decades">
        <option value="neon-retrowave">80's Retrowave</option>
        <option value="neon-grunge">90's Grunge</option>
        <option value="neon-y2k">2000's Y2K</option>
        <option value="neon-social">2010's Social</option>
        <option value="neon-cyberpunk">2020's Cyberpunk</option>
      </optgroup>
      <optgroup label="Hardware">
        <option value="neon-vfd">VFD Display</option>
      </optgroup>
    </select>
    <label class="ng-text-muted" style="font-size: 0.75rem;">Intensity</label>
    <select class="ng-select" data-theme-switcher-target="intensity" data-action="change->theme-switcher#changeIntensity">
      <option value="neon-subtle">Subtle</option>
      <option value="neon-medium">Medium</option>
      <option value="neon-intense">Intense</option>
    </select>
    <div data-theme-switcher-target="vfdHueGroup" style="display: none; align-items: center; gap: 0.5rem;">
      <label class="ng-text-muted" style="font-size: 0.75rem;">VFD Hue</label>
      <input type="range" min="0" max="360" value="170" data-theme-switcher-target="vfdHue" data-action="input->theme-switcher#changeVfdHue" style="width: 5rem; accent-color: var(--ng-primary);">
    </div>
  </div>
</nav>
