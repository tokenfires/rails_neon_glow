<section style="margin-bottom: 3rem;">
  <h2 style="color: var(--ng-primary); font-size: 1.25rem; font-weight: 700; margin-bottom: 1rem;">Color Palette</h2>
  <div class="ng-card">
    <p class="ng-text-muted" style="font-size: 0.8rem; margin-bottom: 1rem;">Current theme colors. Switch palettes in the navbar to see them change.</p>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(8rem, 1fr)); gap: 0.75rem;">

      <div style="text-align: center;">
        <div style="background-color: var(--ng-primary); width: 100%; height: 3.5rem; border-radius: var(--ng-radius); box-shadow: 0 0 var(--ng-glow-spread) rgba(var(--ng-primary-rgb), var(--ng-glow-opacity)); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Primary</p>
        <p class="ng-swatch-hex" data-color="primary" style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">&nbsp;</p>
      </div>

      <div style="text-align: center;">
        <div style="background-color: var(--ng-secondary); width: 100%; height: 3.5rem; border-radius: var(--ng-radius); box-shadow: 0 0 var(--ng-glow-spread) rgba(var(--ng-secondary-rgb), var(--ng-glow-opacity)); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Secondary</p>
        <p class="ng-swatch-hex" data-color="secondary" style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">&nbsp;</p>
      </div>

      <div style="text-align: center;">
        <div style="background-color: var(--ng-accent); width: 100%; height: 3.5rem; border-radius: var(--ng-radius); box-shadow: 0 0 var(--ng-glow-spread) rgba(var(--ng-accent-rgb), var(--ng-glow-opacity)); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Accent</p>
        <p class="ng-swatch-hex" data-color="accent" style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">&nbsp;</p>
      </div>

      <div style="text-align: center;">
        <div style="background-color: var(--ng-success); width: 100%; height: 3.5rem; border-radius: var(--ng-radius); box-shadow: 0 0 var(--ng-glow-spread) rgba(var(--ng-success-rgb), var(--ng-glow-opacity)); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Success</p>
        <p class="ng-swatch-hex" data-color="success" style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">&nbsp;</p>
      </div>

      <div style="text-align: center;">
        <div style="background-color: var(--ng-warning); width: 100%; height: 3.5rem; border-radius: var(--ng-radius); box-shadow: 0 0 var(--ng-glow-spread) rgba(var(--ng-warning-rgb), var(--ng-glow-opacity)); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Warning</p>
        <p class="ng-swatch-hex" data-color="warning" style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">&nbsp;</p>
      </div>

      <div style="text-align: center;">
        <div style="background-color: var(--ng-danger); width: 100%; height: 3.5rem; border-radius: var(--ng-radius); box-shadow: 0 0 var(--ng-glow-spread) rgba(var(--ng-danger-rgb), var(--ng-glow-opacity)); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Danger</p>
        <p class="ng-swatch-hex" data-color="danger" style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">&nbsp;</p>
      </div>

      <div style="text-align: center;">
        <div style="background-color: var(--ng-info); width: 100%; height: 3.5rem; border-radius: var(--ng-radius); box-shadow: 0 0 var(--ng-glow-spread) rgba(var(--ng-info-rgb), var(--ng-glow-opacity)); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Info</p>
        <p class="ng-swatch-hex" data-color="info" style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">&nbsp;</p>
      </div>

    </div>

    <hr class="ng-divider" style="margin: 1.25rem 0;">
    <p class="ng-text-muted" style="font-size: 0.8rem; margin-bottom: 0.75rem;">Surface Colors</p>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(8rem, 1fr)); gap: 0.75rem;">

      <div style="text-align: center;">
        <div style="background-color: var(--ng-bg); width: 100%; height: 2.5rem; border-radius: var(--ng-radius); border: 1px solid var(--ng-border); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Background</p>
        <p style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">#0a0a1e</p>
      </div>

      <div style="text-align: center;">
        <div style="background-color: var(--ng-surface); width: 100%; height: 2.5rem; border-radius: var(--ng-radius); border: 1px solid var(--ng-border); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Surface</p>
        <p style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">#12122a</p>
      </div>

      <div style="text-align: center;">
        <div style="background-color: var(--ng-surface-raised); width: 100%; height: 2.5rem; border-radius: var(--ng-radius); border: 1px solid var(--ng-border); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Raised</p>
        <p style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">#1a1a3e</p>
      </div>

      <div style="text-align: center;">
        <div style="background-color: var(--ng-surface-overlay); width: 100%; height: 2.5rem; border-radius: var(--ng-radius); border: 1px solid var(--ng-border); margin-bottom: 0.4rem;"></div>
        <p style="color: var(--ng-text); font-size: 0.8rem; font-weight: 600; margin: 0;">Overlay</p>
        <p style="color: var(--ng-text-muted); font-size: 0.7rem; font-family: monospace; margin: 0;">#222252</p>
      </div>

    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", updateSwatchHexCodes);
  document.addEventListener("change", updateSwatchHexCodes);

  function updateSwatchHexCodes() {
    requestAnimationFrame(() => {
      document.querySelectorAll(".ng-swatch-hex").forEach(el => {
        const colorName = el.dataset.color;
        const value = getComputedStyle(document.body).getPropertyValue(`--ng-${colorName}`).trim();
        el.textContent = value || "";
      });
    });
  }
</script>
